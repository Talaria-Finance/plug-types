{
    "compilerOptions": {
        "target": "es2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noUncheckedIndexedAccess": true,
        "noEmit": true,
        "allowJs": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "tsup.config.ts"]
}
