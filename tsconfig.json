{
	"compilerOptions": {
		"target": "es2020",
		"module": "CommonJS",
		"moduleResolution": "node",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noUncheckedIndexedAccess": true,
		"noEmit": true,
		"allowJs": true,
		"baseUrl": "./",
		"rootDir": "./",
		"outDir": "./dist",
		"esModuleInterop": true,
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"skipLibCheck": true,
		"paths": {
			"@/*": ["./src/*"],
			"@nftchance/plug-types/zod": ["./src/zod"],
			"@nftchance/plug-types/zod/*": ["./src/zod/*"],
			"zod": ["./node_modules/zod/"],
			"zod/*": ["./node_modules/zod/*"]
		},

		"downlevelIteration": true,
		// "isolatedModules": true,
		"lib": ["es2021", "dom"],
		"resolveJsonModule": true,
		"types": ["node"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules/**", "dist/**"]
}
